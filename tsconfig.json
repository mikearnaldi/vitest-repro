{
    "compilerOptions": {
        "incremental": true,
        "tsBuildInfoFile": "build/.tsbuildinfo",
        "strict": true,
        "declaration": true,
        "sourceMap": true,
        "outDir": "build/esm",
        "declarationDir": "build/dts",
        "target": "ES2021",
        "module": "ESNext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
    ]
}